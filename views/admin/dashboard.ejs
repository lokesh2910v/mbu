<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    body {
      padding: 40px;
      padding-top: 0;
      background-image: url(/images/choosing-bg.jpg);
      color: white;
      font-size: 25px;
      font-family: Arial, sans-serif; /* Add a default font */
    }
    
    a {
      color: white;
      text-decoration: none; /* Remove underline from links */
    }

    .admin-title {
      margin-bottom: 20px; /* Space below title */
    }

    .button, .btn {
      background-color: #007bff; /* Bootstrap primary color */
      color: white; /* Button text color */
      padding: 10px 20px; /* Padding inside buttons */
      border: none; /* No border */
      border-radius: 5px; /* Rounded corners */
      cursor: pointer; /* Pointer cursor */
      transition: background-color 0.3s; /* Smooth transition */
      text-align: center; /* Center align text */
      display: inline-block; /* Display inline for proper spacing */
      margin: 5px; /* Space between buttons */
      width: 120px; /* Fixed width for equal button sizes */
      font-size: 16px; /* Font size for buttons */
    }

    .button:hover, .btn:hover {
      background-color: #0056b3; /* Darker blue on hover */
    }

    .admin-posts {
      list-style-type: none; /* Remove bullet points from the list */
      padding: 0; /* Remove default padding */
    }

    .admin-posts li {
      margin: 10px 0; /* Space between list items */
      padding: 10px; /* Padding for list items */
      background-color: rgba(0, 0, 0, 0.6); /* Semi-transparent background for posts */
      border-radius: 5px; /* Rounded corners */
    }

    .admin-post-controls {
      margin-top: 10px; /* Space above controls */
    }

    .btn-delete {
      background-color: #dc3545; /* Bootstrap danger color */
    }

    .btn-delete:hover {
      background-color: #c82333; /* Darker red on hover */
    }
  </style>
</head>
<body>
  <div class="admin-title">
    <h2 style="color: #f5a425;">Courses</h2>
    <a href="/add-post" class="button">+ Add New</a>
  </div>
  
  <ul class="admin-posts">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <%= post.title %> &nearr;
        </a>
        <div class="admin-post-controls">
          <a href="/edit-post/<%= post._id %>" class="btn">Edit</a>
          <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST" style="display:inline;">
            <input type="submit" value="Delete" class="btn-delete btn">
          </form>
        </div>
      </li>
    <% }) %>
  </ul>
  
</body>
</html>
